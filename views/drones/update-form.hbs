<h2>Actualiza el drone {{name}}</h2>

<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>{{name}}</h1>

            <hr>

            <form action="/drones/{{id}}/edit" method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="title" name="name" value="{{name}}">
                </div>

                <div class="mb-3">
                    <label for="propellers" class="form-label">Hélices</label>
                    <input type="text" class="form-control" id="description" name="propellers" value="{{propellers}}">
                </div>

                <div class="mb-3">
                    <label for="maxSpeed" class="form-label">Máxima velocidad</label>
                    <input type="text" class="form-control" id="description" name="maxSpeed" value="{{maxSpeed}}">
                </div>

                <button type="submit" class="btn btn-dark">Actualizar drone</button>
            </form>

        </div>
    </div>
